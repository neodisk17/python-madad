{
  "name": "python-madad",
  "displayName": "Python Madad",
  "description": "Provides utilities for Python development in Visual Studio Code.",
  "version": "1.0.0",
  "publisher": "WhisperYourWishLokeshKumar",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:requirements.txt",
    "onLanguage:pip-requirements"
  ],
  "main": "./dist/extension.js",
  "icon": "images/logo.png",
  "contributes": {
    "commands": [
      {
        "command": "python-madad.installPackage",
        "title": "Python Madad: Install Packages",
        "icon": {
          "dark": "./src/assets/icon/download-light-icon.svg",
          "light": "./src/assets/icon/download-dark-icon.svg"
        }
      },
      {
        "command": "python-helper.install-python-package",
        "title": "Install Python Package"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == 'pip-requirements'",
          "command": "python-madad.installPackage",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "python-madad.installPackage",
          "when": "resourceLangId == 'pip-requirements'"
        }
      ]
    }
  },
  "repository": {
		"type": "git",
		"url": "https://github.com/neodisk17/python-madad"
	},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "npx prettier --write .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "pretty-quick": "^3.1.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "node-html-parser": "^6.1.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  }
}

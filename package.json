{
  "name": "python-madad",
  "displayName": "Python Madad",
  "description": "Provides utilities for Python development in Visual Studio Code.",
  "version": "1.0.0",
  "publisher": "WhisperYourWishLokeshKumar",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:requirements.txt",
    "onLanguage:pip-requirements"
  ],
  "main": "./dist/extension.js",
  "icon": "images/logo.png",
  "contributes": {
    "commands": [
      {
        "command": "python-madad.installPackage",
        "title": "Python Madad: Install Packages",
        "icon": {
          "dark": "./src/assets/icon/download-light-icon.svg",
          "light": "./src/assets/icon/download-dark-icon.svg"
        }
      },
      {
        "command": "python-madad.install-python-package",
        "title": "Python Madad: Install Python Package"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == 'pip-requirements'",
          "command": "python-madad.installPackage",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "python-madad.installPackage",
          "when": "resourceLangId == 'pip-requirements'"
        },
        {
          "command": "python-madad.install-python-package",
          "when": "resourceLangId == 'pip-requirements'"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neodisk17/python-madad"
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "npx prettier --write .",
    "test": "node 'out/test/runTest.js'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "18.x",
    "@types/sinon": "^17.0.2",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "husky": "^8.0.0",
    "mocha": "^8.2.1",
    "prettier": "^3.1.1",
    "pretty-quick": "^3.1.3",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "vscode-test": "^1.6.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "node-html-parser": "^6.1.11"
  }
}
